@{ 
    QL_BanDoTreEm.Models.NHANVIEN nv = Session["NV"] as QL_BanDoTreEm.Models.NHANVIEN;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/LayoutAdmin.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="~/Content/js/jquery-3.7.1.js"></script>
    <script src="~/Content/js/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/js/jquery.validate.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <div class="sidebar">
        <header>
            <div class="image-text">
                <span class="image">
                    <img src="~/Content/images/logo.png" alt="logo" />
                </span>

                <div class="text header-text">
                    <span class="name">THE KID</span>

                    <span class="profession">@nv.TENNHANVIEN</span>
                </div>
            </div>
        </header>

        <div class="menu-bar">
            <div class="menu">
                <ul class="menu-bar" style="padding-top: 30px;">
                    <li class="nav-link">
                        <a href="/HOADON/index">
                            <i class='bx bx-sushi icon'></i>
                            <span class="text nav-text">Quản lý đơn hàng</span>
                        </a>
                    </li>


                    <li class="nav-link">
                        <a href="/ADMIN_QLKhoHang/QLKho_NhanVien">
                            <i class='bx bx-home icon'></i>
                            <span class="text nav-text"> Quản lý kho hàng</span>
                        </a>
                    </li>
                    <li class="nav-link">
                        <a href="/KHACHHANG/getKHACHHANGNV">
                            <i class='bx bx-pie-chart icon'></i>
                            <span class="text nav-text">Quản lý khách hàng</span>
                        </a>
                    </li>

                </ul>
            </div>

            <div class="bottom-content">
                <li class="">
                    <a href="~/DANGNHAP/LoginAdmin">
                        <i class='bx bx-log-out icon'></i>
                        <span class="text nav-text">log out</span>
                    </a>
                </li>
                <li class="mode">
                    <a href="#">
                        <div class="moon-sun">
                            <i class='bx bx-moon icon moon'></i>
                            <i class='bx bx-sun icon sun'></i>
                        </div>
                        <span class="mode-text text">Dark</span>
                        <div class="toggle-switch">
                            <span class="switch"></span>
                        </div>
                    </a>
                </li>
            </div>
        </div>
    </div>
   
    <script src="~/Content/js/Admin.js"></script>
    <div class="main-contain">
        @RenderBody()
    </div>
</body> 
</html>
